{"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  
"description": "Comparison of instore shopping and online shopping",
"title": {
    "text": "Comparison of Online and Instore shopping",
    "subtitle": ["Index 2019=100", "Source: ONS - Retail Sales Index","Colours: Red = Online Spending, Green = Instore Spending"],
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"},

    "height": 300,
    "width": 300,

    "layer": [
    {"data": {"url": "https://api.allorigins.win/raw?url=https://api.ons.gov.uk/timeseries/J5BI/dataset/DRSI/data",
    "format":{"property": "quarters"}, "name": "Online"}, "transform": [{"calculate": "substring(datum.quarter,1)*3-1", "as": "quarter_n"},
    {"calculate": "join([datum.year, datum.quarter_n],['-'])", "as": "date2"},
    {"calculate": "timeParse(datum.date2, '%Y-%m')", "as": "date3"},
    {"filter": {
      "field": "date3",
      "range": [
        {"year": 2016},
        {"year": 2024}
      ]
    }}],

    "mark": {"type":"line", "color":"red"}},

    {"data": {"url": "https://api.allorigins.win/raw?url=https://api.ons.gov.uk/timeseries/EAQY/dataset/DRSI/data",
    "format":{"property": "quarters"}, "name": "Instore" }, "transform": [{"calculate": "substring(datum.quarter,1)*3-1", "as": "quarter_n"},
    {"calculate": "join([datum.year, datum.quarter_n],['-'])", "as": "date2"},
    {"calculate": "timeParse(datum.date2, '%Y-%m')", "as": "date3"},
    {"filter": {
      "field": "date3",
      "range": [
        {"year": 2016},
        {"year": 2024}
      ]
    }}],
    "mark": {"type":"line", "color":"darkgreen"}}
    ],
    "encoding": {"x": {
    "field": "date3", 
    "type": "temporal", 
    "title": null},
  
  "y": {
    "field": "value",
    "type": "quantitative",
    "title": null},

    "color": {
      "field": "",
      "type": "nominal",
      "scale": {"scheme": "set1"},
      "title": null,
      "legend": {"orient": "top-left"}}
    }
    }